{
  "compilerOptions": {
    "target": "es5", // So we don't need to use Babel to go from es6 => es5 for browser support.
    "lib": [ "es2015" ],
    "declaration": false,
    "jsx": "react",
    "module": "commonjs",
    "sourceMap": true,
    "noUnusedLocals": true,
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "plugins": [
      { "name": "tslint-language-service" }
    ],
    "rootDir": "."
  },
  "include" : [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    ".build",
    "node_modules",
    "!node_modules/@types",
    "src/types"
  ]
}
