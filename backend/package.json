{
  "name": "pace-mobile-poc-backend",
  "version": "0.1",
  "description": "Pace Enterprise Mobile Communication POC",
  "main": "index.js",
  "author": "",
  "license": "none",
  "scripts": {
    "add-account": "ts-node src/scripts/account-add.ts",
    "build": "tsc",
    "dbm": "ts-node src/scripts/db-migrate.ts",
    "lint": "tslint -p ./tsconfig.json",
    "start": "ts-node src/index.ts",
    "test": "CONFIG_ENV=test yarn run dbm up && CONFIG_ENV=test jest --coverage --runInBand 'tests/*/.*\\.test(-integ)?.ts$'",
    "verify": "yarn run build && yarn run lint && yarn run test"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.1",
    "@types/boom": "^7.1.1",
    "@types/command-line-args": "^5.0.0",
    "@types/command-line-usage": "^5.0.1",
    "@types/hapi-auth-basic": "^5.0.4",
    "@types/hapi__hapi": "^18.2.5",
    "@types/jest": "^24.0.18",
    "@types/joi": "^13.0.5",
    "@types/mysql": "^2.15.2",
    "@types/node": "^12.7.12",
    "chai": "^4.1.2",
    "jest": "^24.9.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^6.1.2",
    "tslint": "^5.20.0",
    "tslint-language-service": "^0.9.8",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "@hapi/basic": "^5.0.0",
    "@hapi/hapi": "^18.4.0",
    "@hapi/joi": "^16.1.7",
    "axios": "^0.19.0",
    "bcryptjs": "^2.4.3",
    "command-line-args": "^5.0.2",
    "command-line-usage": "^5.0.5",
    "cron": "^1.3.0",
    "db-migrate": "^0.11.3",
    "db-migrate-mysql": "^1.1.10",
    "generate-password": "^1.4.2",
    "mysql": "^2.15.0",
    "nullable-ts": "^1.3.0",
    "winston": "^3.2.1"
  },
  "jest": {
    "coverageDirectory": ".build/coverage",
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/config/*.ts",
      "!src/scripts/*.ts",
      "!src/types/**",
      "!**/node_modules/**",
      "!src/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "transform": {
      ".(ts)": "ts-jest"
    },
    "testRegex": ".*\\.test(-integ)?.ts$",
    "moduleDirectories": [
      "<rootDir>/node_modules",
      "<rootDir>/src/"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/.build"
    ],
    "coverageReporters": [
      "html",
      "text",
      "text-summary"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    }
  }
}
